<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/telaEdicaoAluno.css">
    <script src="/js/editaResponsavel.js" defer></script>
    <script src="https://unpkg.com/imask"></script>
    <title>Editar aluno</title>
</head>

<body onload="atualiza_campos()">
    <header>
        <div class="title">
            <nav class="subtitle">
                <a href="/logout" class="btn btn-link">Logoff</a>
                <a href="/mostraInformacoes" class="btn btn-link">Informações dos alunos</a>
            </nav>
        </div>
    </header>
    <h1>Edição do Responsável</h1>
    <main>
        <section class="formulario-editaResponsavel">
            <div class="form">
                <form action="/editaResponsavel" id="form" method="post" class="form-group" style="display:block">
                    <label for="selectAluno">Aluno</label>
                    <select name="rg" id="selectAluno">
                        <% data.forEach(item=> { %>
                            <option value="<%= item.alunos.rg_aluno %>" nome="<%= item.responsaveisAlunos.nome %>"
                                telefone="<%= item.responsaveisAlunos.telefone %>">
                                <%= item.alunos.rg_aluno + " " + item.alunos.nome %>
                            </option>
                            <% }); %>
                    </select><br>
                    <div id="atualiza" style="display: block;">
                        <label for="nome_atualizado">Nome do responsável*</label>
                        <input type="text" name="nome_atualizado" id="nome_atualizado" class="form-control"
                            placeholder="Nome atualizado" maxlength="100" autocomplete="off"><br>
                        <label for="telefone">Telefone*</label>
                        <input type="tel" name="tel" id="telefone"
                            pattern="(\([0-9]{2}\))\s([9]{1})?([0-9]{4})-([0-9]{4})" class="form-control"
                            placeholder="(xx) xxxxx-xxxx" autocomplete="off" minlength="0" maxlength="15"><br>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Salvar</button>
                </form>
            </div>
        </section>
    </main>

</body>
<script>
    IMask(
        document.getElementById('telefone'),
        {
            mask: '(00)00000-0000'
        },
        IMask(
            document.getElementById('nome_atualizado'), {
            mask: /^[\p{L} '-]*$/u
        }))
</script>

</html>